<resources>

    <style name="jmui_chat_text_date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">10px</item>
        <item name="android:paddingRight">10px</item>
        <item name="android:paddingTop">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#555756</item>
        <item name="android:textSize">24px</item>
    </style>
    <style name="jmui_chat_item_receiver_avatar_style">
        <item name="android:layout_width">100px</item>
        <item name="android:layout_height">100px</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">16px</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="jmui_chat_display_name_style">
        <item name="android:ems">5</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#B3B3B3</item>
        <item name="android:textSize">24px</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="jmui_msg_text_style">
        <item name="android:maxWidth">450px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">32px</item>
        <item name="android:paddingTop">18px</item>
        <item name="android:paddingBottom">8.67dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="jmui_chat_content_style">
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#373334</item>
        <item name="android:textSize">30px</item>
        <item name="android:lineSpacingExtra">4px</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>
    <style name="jmui_chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">30px</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="jmui_chat_item_send_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">20px</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="jmui_chat_item_sender_avatar_style">
        <item name="android:layout_width">100px</item>
        <item name="android:layout_height">100px</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">16px</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="jmui_chat_item_receive_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">20px</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
