<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.jiage.battle.surface.aircraft2.AircraftSurface
        android:id="@+id/act_aircraftwars2_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/act_aircraftwars2_booswarningll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_booswarning_textbg"/>
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_booswarning_text"/>
        <ImageView
            android:id="@+id/act_aircraftwars2_booswarningbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/icon_booswarning1"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginBottom="40px"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/act_aircraftwars_blood1"
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_aircraftwars_blood"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/act_aircraftwars_blood2"
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_aircraftwars_blood"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/act_aircraftwars_blood3"
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_aircraftwars_blood"
                android:adjustViewBounds="true"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/act_aircraftwars_titlell"
        android:layout_marginRight="20px"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="得分"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/act_aircraftwars_fraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="20px"
            android:textSize="50px"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>
