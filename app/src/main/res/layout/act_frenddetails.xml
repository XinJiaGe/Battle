<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <com.jiage.battle.view.ImageViewHeightToWidthView
            android:id="@+id/act_frenddetails_imag"
            android:layout_margin="20px"
            android:layout_width="110px"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/act_frenddetails_remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="34px"/>
                <ImageView
                    android:id="@+id/act_frenddetails_gender"
                    android:layout_marginLeft="10px"
                    android:layout_width="40px"
                    android:layout_height="40px"/>
            </LinearLayout>
            <TextView
                android:id="@+id/act_frenddetails_phone"
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28px"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/act_frenddetails_nikname"
                android:layout_marginTop="5px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称：佳哥"
                android:textSize="22px"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/act_frenddetails_sendCarLl"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="20px"
        android:background="@drawable/selector_white_gray"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="发送该名片"
            android:textColor="@color/black"
            android:textSize="34px"/>
        <ImageView
            android:layout_width="26px"
            android:layout_height="40px"
            android:background="@drawable/icon_back_right_black"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/act_frenddetails_eliminate"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="20px"
        android:background="@drawable/selector_white_gray"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="清除聊天记录"
            android:textColor="@color/black"
            android:textSize="34px"/>
        <ImageView
            android:layout_width="26px"
            android:layout_height="40px"
            android:background="@drawable/icon_back_right_black"/>
    </LinearLayout>
    <Button
        android:visibility="gone"
        android:id="@+id/act_frenddetails_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="40px"
        android:background="@drawable/shape_button"
        android:text=""
        android:textColor="@color/bg"
        android:textSize="34px" />

</LinearLayout>
