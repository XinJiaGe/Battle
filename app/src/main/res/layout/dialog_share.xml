<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
   <!-- android:background="@android:color/transparent"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20px"
        android:layout_marginTop="10px"
        android:background="@color/bg">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分享链接至"
        android:gravity="center"
        android:textSize="32px"
        android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/bg"
        android:paddingTop="20px"
        android:paddingBottom="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:background="@color/bg"
            android:id="@+id/dialog_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="65px"
                android:layout_height="60px"
                android:background="@drawable/icon_weixin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="微信"
                android:layout_marginTop="10px"
                android:textColor="@color/black"
                android:textSize="34px"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/bg"
            android:id="@+id/dialog_weixinpengyou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@drawable/icon_weixinpengyou"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="微信朋友圈"
                android:layout_marginTop="10px"
                android:textColor="@color/black"
                android:textSize="34px"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/bg"
            android:id="@+id/dialog_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="53px"
                android:layout_height="60px"
                android:background="@drawable/icon_qq"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QQ"
                android:layout_marginTop="10px"
                android:textColor="@color/black"
                android:textSize="34px"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:background="@color/bg"
            android:id="@+id/dialog_qq_zoom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="63px"
                android:layout_height="60px"
                android:background="@drawable/icon_qq_zoom"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QQ空间"
                android:layout_marginTop="10px"
                android:textColor="@color/black"
                android:textSize="34px"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_frag_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        android:background="@color/white"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="取消分享"
            android:textSize="32px"/>
    </LinearLayout>
</LinearLayout>
