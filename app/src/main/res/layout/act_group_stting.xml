<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="20px"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="群聊成员"
            android:textColor="@color/black"
            android:textSize="34px"/>
        <LinearLayout
            android:id="@+id/act_group_stting_numberManLl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/act_group_stting_numberMan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共0人"
                android:textColor="@color/black"
                android:textSize="28px"/>
            <ImageView
                android:layout_marginLeft="10px"
                android:layout_width="17px"
                android:layout_height="30px"
                android:background="@drawable/icon_back_right_black"/>
        </LinearLayout>
    </LinearLayout>
    <GridView
        android:id="@+id/act_groupstting_gridView"
        android:layout_width="match_parent"
        android:columnWidth="80dp"
        android:stretchMode="spacingWidthUniform"
        android:numColumns="5"
        android:paddingLeft="10px"
        android:background="@color/white"
        android:layout_height="wrap_content"></GridView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/stroke"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="20px"
        android:background="@drawable/selector_white_gray"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="群聊号码"
            android:textColor="@color/black"
            android:textSize="34px"/>

        <TextView
            android:id="@+id/act_groupstting_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30px"/>
    </LinearLayout>
    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/stroke"></View>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/act_groupstting_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="20px"
        android:background="@drawable/selector_white_gray"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="聊天记录"
            android:textColor="@color/black"
            android:textSize="34px"/>

        <ImageView
            android:layout_width="17px"
            android:layout_height="30px"
            android:background="@drawable/icon_back_right_black"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/stroke"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="20px"
        android:background="@drawable/selector_white_gray"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="屏蔽消息"
            android:textColor="@color/black"
            android:textSize="34px"/>

        <CheckBox
            android:id="@+id/act_groupstting_disturb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/stroke"></View>
    <LinearLayout
        android:id="@+id/act_groupstting_deletRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="20px"
        android:background="@drawable/selector_white_gray"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="清空聊天记录"
            android:textColor="@color/black"
            android:textSize="34px"/>

        <ImageView
            android:layout_width="17px"
            android:layout_height="30px"
            android:background="@drawable/icon_back_right_black"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/stroke"></View>

    <Button
        android:id="@+id/act_groupstting_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="40px"
        android:background="@drawable/shape_button"
        android:text="退出群組"
        android:textColor="@color/bg"
        android:textSize="34px" />
</LinearLayout>
