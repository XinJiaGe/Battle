<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gesture-image="http://schemas.polites.com/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/album_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.polites.android.GestureImageView
            android:id="@+id/album_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20px"
            gesture-image:max-scale="10.0"
            gesture-image:min-scale="0.1"
            gesture-image:strict="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.jiage.battle.view.LoadingProgressView
                android:id="@+id/album_loadingProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.jiage.battle.view.LoadingProgressView>
        </LinearLayout>

        <ImageView
            android:id="@+id/album_delet"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px"
            android:background="@drawable/icon_delet"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
