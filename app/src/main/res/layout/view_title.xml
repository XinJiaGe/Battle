<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_title_ll"
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:background="@color/main"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/view_title_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20px"></LinearLayout>

        <LinearLayout
            android:id="@+id/view_title_back"
            android:layout_width="wrap_content"
            android:minWidth="100px"
            android:layout_height="100px"
            android:layout_centerVertical="true"
            android:background="@color/main"
            android:gravity="center"
            android:padding="20px">

            <ImageView
                android:id="@+id/view_title_backIv"
                android:layout_width="40px"
                android:layout_height="40px"
                android:background="@drawable/icon_back_left_white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_title_right"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/main"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20px"></LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/stroke"
        android:visibility="gone"></View>
</com.zhy.autolayout.AutoLinearLayout>
